<Page x:Class="FSIncome.Windows.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FSIncome.Windows.Pages"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ProfilePage">

    <ScrollViewer VerticalScrollBarVisibility="Hidden"
                  HorizontalScrollBarVisibility="Visible">
        <GroupBox Header="PROFILE" Margin="10" FontSize="24" Width="1500">
            <UniformGrid Rows="1" Margin="0,40,30,40">
                <Button x:Name="ButtonProfile1" Content="Create new profile" Click="ButtonProfile1Click" Margin="50,0,0,0" />
                <Button x:Name="ButtonProfile2" Content="Create new profile" Click="ButtonProfile2Click" Margin="50,0,0,0" />
                <Button x:Name="ButtonProfile3" Content="Create new profile" Click="ButtonProfile3Click" Margin="50,0,0,0" />
                <Button x:Name="ButtonProfile4" Content="Create new profile" Click="ButtonProfile4Click" Margin="50,0,0,0" />
                <Button x:Name="ButtonProfile5" Content="Create new profile" Click="ButtonProfile5Click" Margin="50,0,0,0" />
            </UniformGrid>
        </GroupBox>
    </ScrollViewer>
    
</Page>
