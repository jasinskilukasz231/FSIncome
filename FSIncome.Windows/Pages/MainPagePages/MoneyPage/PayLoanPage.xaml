<Page x:Class="FSIncome.Windows.Pages.MainPagePages.MoneyPage.PayLoanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FSIncome.Windows.Pages.MainPagePages.MoneyPage"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="PayLoanPage">
    
    <GroupBox Header="MONEY" Margin="10" FontSize="24" Foreground="{StaticResource textColor}" FontWeight="Bold">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="YOUR LOANS:" TextAlignment="Center"/>
            <Separator/>
            <TextBlock x:Name="loanNameLabel" FontSize="22" TextWrapping="Wrap" TextAlignment="Center"/>
            <Separator Height="10"/>
            <TextBlock x:Name="totalAmountLabel" TextAlignment="Center"/>
            <Separator Height="10"/>
            <Button Margin="0,0,0,0" Width="100" Content="PAY" Template="{StaticResource buttonTemplate}"
                    Click="Button_Click"/>
        </StackPanel>
    </GroupBox>
</Page>
